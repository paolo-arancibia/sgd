{% extends '::base.html.twig' %}

{% block content %}
<form id="container" class="container-fluid d-flex justify-content-center" method="post" action="">
  <div class="card w-auto">
    <div class="card-header">
      <h4 class="">Acceso</h4>
    </div>
    <div class="card-body">
      <div class="form-group row">
        <div class="col"><label for="username">Usuario</label></div>
        <div class="col"><input id="username" class="form-control" type="text" name="_username" value="{{ last_username }}" /></div>
      </div>

      <div class="form-group row">
        <div class="col"><label for="password">Contrase√±a</label></div>
        <div class="col"><input id="password" class="form-control" type="password" name="_password" /></div>
      </div>

      {% if error %}<span class="text-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</span>{% endif %}
    </div>
    <button class="btn btn-primary" href="{{ url('furo_list') }}" type="submit">Ingresar</button>
  </div>
</form>
{% endblock %}
