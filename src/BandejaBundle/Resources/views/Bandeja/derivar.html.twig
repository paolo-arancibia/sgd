<div class="modal fade" id="derivarModal" tabindex="-1" role="dialog" aria-labelledby="derivarModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      {{ form_start(derivarForm, {'attr': {'id': 'derivar'}}) }}
	<div class="modal-header">
          <h5 class="modal-title" id="derivarModalLabel">Derivar a</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
	</div>
	<div class="modal-body">
	  {{ form_errors(derivarForm) }}
	  {{ form_row(derivarForm.originales) }}
	  {{ form_row(derivarForm.nota_original) }}
	  {{ form_row(derivarForm.copias) }}
	  {{ form_row(derivarForm.nota_copias) }}
	  {{ form_row(derivarForm.adjuntos) }}
	</div>
	<div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
          <button type="submit" form="derivar" class="btn btn-primary">Guardar y Derivar</button>
	</div>
      {{ form_end(derivarForm) }}
    </div>
  </div>
</div>
